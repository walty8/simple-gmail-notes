{
  "manifest_version": 2,
  "name": "Simple Gmail Notes",
  "description": "Add notes to emails threads in Gmail",
  "version": "0.1",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "permissions": [
    "storage",
    "activeTab",
    "tabs", 
    "identity",
      "https://www.googleapis.com/*",  
      "https://accounts.google.com/*"
  ],
  "externally_connectable": {
    "matches": ["https://mail.google.com/*"]
  },
  "web_accessible_resources": [
    "lib/jquery-1.11.3.min.js",
    "lib/gmail.js",
    "page.js"
  ],
  "background": { 
      "scripts" : ["lib/jquery-1.11.3.min.js", "background.js"]
  },
  "content_scripts":  [{
      "matches": [ "https://mail.google.com/*"],
      "js": [ "lib/jquery-1.11.3.min.js", "content.js"],
      "run_at": "document_end"
  }],
  "key": ""
}

